path_exists SCREEN_LOCK {
         path = "/tmp/screen_lock_toggled_off.lock"
         color_good = "#E5E500"
         color_bad = "#224444"
         format = "  "
}

volume master {
        format = " : %volume "
        format_muted = " : M (%volume) "
        device = "pulse"
}

