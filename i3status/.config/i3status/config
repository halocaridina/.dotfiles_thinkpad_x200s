        color_good = "#E5E500"
        color_bad = "#224444"
        format = "  "
        pidfile = "/tmp/openconnect_vpn.lock"
}


wireless _first_ {
        format_up = " : %essid @ %quality - %ip "
        format_down = "  "
}

