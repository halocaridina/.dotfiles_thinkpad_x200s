        format_up = " : %ip "
        format_down = "  "
}

battery 0 {
        low_threshold = 15
        threshold_type = "percentage"
        last_full_capacity = true
        integer_battery_capacity = false
        hide_seconds = true
        format = "%status %percentage %remaining %consumption "
        status_chr = " :"
        status_bat = " :"
        status_full = " :"
        status_unk = " :"
}

tztime local {
        format = " : %F (%a)  : %r "
}

